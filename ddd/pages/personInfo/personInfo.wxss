/* pages/personInfo/personInfo.wxss */
.personInfo {
  border-top: 1px solid #f7f7f7;
  color: #333333;
  font-size: 30rpx;
  background: #F7F7F7;
  height: 100vh;
}
.personInfo-content {
  padding-left: 32rpx;
  background: #ffffff;
}
.header {
  height: 190rpx;
  align-items: center;
  padding-right: 30rpx;
  border-bottom: 1px solid #f7f7f7;
}
.header-img {
  width: 108rpx;
  height: 108rpx;
  border-radius: 108rpx;
  margin-right: 30rpx;
}
.personInfo-list {
  height: 86rpx;
  align-items: center;
  padding-right: 30rpx;
  border-bottom: 1px solid #f7f7f7;
}
.personInfo-info {
  color: #777777;
  font-size: 32rpx;
  margin-right: 18rpx;
}