/* pages/filtrate/filtrate.wxss */
.border {
  width: 100%;
  height: 20rpx;
  background: #F2F2F2;
}
.wrap-head {
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #333333;
}
/**筛选输入框**/
.filter-input {
  border: 1px solid #979797;
  border-radius: 12rpx;
  flex: 1;
  margin-right: 16rpx;
  text-indent: 60rpx;
  height: 70rpx;
  line-height: 70rpx;
}
.search {
  width: 30rpx;
  height: 32rpx;
  position: absolute;
  left: 16rpx;
  top:25rpx;
}
.filter-text {
  position: relative;
  top: 18rpx;
}
/**产品筛选*/
.wrap-filter {
  margin-top: 40rpx;
}
.wrap-filter-title {
  flex-wrap: wrap;
}
.fiter-title {
  padding: 4rpx 22rpx;
  border: 1px solid #979797;
  border-radius: 8rpx;
  margin-top: 10rpx;
  margin-right: 32rpx;
  min-width: 88rpx;
  text-align: center;
  font-size: 28rpx;
}
/**查询按钮**/
.wrap-btn {
  display: flex;
  justify-content: space-between;
  margin-top: 100rpx;
  margin-bottom: 20rpx;
}
.btn {
  width: 328rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border: 1px solid #979797;
  border-radius: 8rpx;
}
/*********/
.wrap-list {
  padding: 52rpx 40rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.like {
  width: 28rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.wrap-like {
  color: #ffffff;
  font-size: 26rpx;
  position: absolute;
  top: 270rpx;
  left:220rpx; 
}
.img {
  width: 314rpx;
  height: 314rpx;
  border-radius: 4rpx;
}
.head {
  width: 48rpx;
  height: 48rpx;
  border-radius: 48rpx;
}
.title {
  color: #333333;
  font-size: 32rpx;
  margin-top: 18rpx;
  margin-bottom: 6rpx;
}
.name {
  color: #777777;
  font-size: 26rpx;
  position: relative;
  top: -8rpx;
  margin-left: 10rpx;
}