/* template/mine/mine.wxss */
.wrap-head {
  padding: 0 24rpx;
  height: 176rpx;
  align-items: center;
  background: #fff;
}
.mine-head {
  width: 108rpx;
  height: 108rpx;
  border-radius: 108rpx;
}
.mine-button {
  width: 132rpx;
  height: 52rpx;
  line-height: 52rpx;
  border: 1px solid #323137;
  border-radius: 4px; 
  text-align: center;
  color: #333;
  font-size: 28rpx;
  display: inline-block;
}
.right {
  margin-right: 28rpx;
}
.mine-head-title {
  width: 260rpx;
  color: #333;
  font-size: 32rpx;
  margin-left: 22rpx;
}
.mine-head-des {
  color: #777;
  font-size: 26rpx;
}
.border {
  width: 100%;
  height: 20rpx;
  background: #F7F7F7;
}
.mine-wrap-list {
  font-size: 30rpx;
  color: #333;
  background: #fff;
}
.mine-list {
  height: 80rpx;
  align-items: center;
  padding: 0 30rpx 0 42rpx;
  border-bottom: 1px solid #f7f7f7;
}
.mine-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 18rpx;
}